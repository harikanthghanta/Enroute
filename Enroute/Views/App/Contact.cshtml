
@model Enroute.ViewModels.ContactViewModel

@{
    ViewBag.Title = "Contacts Page";
}

@section scripts {
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row">
    <div class="col-md-4 col-md-offset-3">
        <form method="post">
            <span asp-validation-summary="ModelOnly"></span>
            @if (ViewBag.UserMessage != null)
            {
                <div>@ViewBag.UserMessage</div>
            }
            <div class ="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-muted"></span>
            </div>
            <div class ="form-group">
                <label asp-for="Email">Email</label>
                
                <input type="email" asp-for="Email"class="form-control" />
                <span asp-validation-for="Email" class="text-muted"></span>
            </div>
            <div class ="form-group">
                <label asp-for="Message">Message</label>

                <textarea cols="40" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-muted"></span>
            </div>
            <div>
                <input class="btn btn-success" type="submit" value="send message" />
            </div>
        </form>
    </div>
</div>