@model IEnumerable<Enroute.Models.Trip>

@{ 
    ViewBag.Title = "Index page";
   // Layout = "_Layout";
}
<div class="row">
    <div class="col-md-6">
        <h1>The world</h1>
        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control"/>
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control"/>
            </div>
            <div class="form-group">
                <button type ="submit" value="Add" class="btn btn-success ">Add</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h2>
            The map
        </h2>
        <ul>
            @foreach (var item in Model) 
            {
                <li>@item.Name : @item.DateCreated.ToString("d")</li>
            }

        </ul>
    </div>
</div>